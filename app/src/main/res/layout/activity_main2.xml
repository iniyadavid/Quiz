        android:layout_marginStart="120dp"
        android:textColor="#18369b"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taylor Swift"
        android:textAppearance="?android:textAppearanceMedium" />
    <CheckBox    android:id="@+id/q22"
        android:layout_marginStart="120dp"
        android:textColor="#18369b"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rihanna"
        android:textAppearance="?android:textAppearanceMedium" />
    <CheckBox    android:id="@+id/q23"
        android:layout_marginStart="120dp"
        android:textColor="#18369b"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christina Perri"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.Who is this singer?"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginTop="20dp"

        android:layout_margin="35dp"
        android:textSize="30sp"
        android:textColor="#ff2414"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/photo_image_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bs" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/q31"
