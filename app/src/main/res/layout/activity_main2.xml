<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="@string/q1"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#16078e"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jb" />

        <RadioGroup
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:text="Adam Levine"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="@string/jb"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Ed Sheeren"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="@string/q2"
            android:textAlignment="center"


            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#16078e"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_image_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ts" />

        <CheckBox
            android:id="@+id/q21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:text="@string/ts"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#18369b"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/q22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Rihanna"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#18369b"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/q23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Christina Perri"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#18369b"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:layout_marginTop="20dp"
            android:text="@string/q3"
            android:textAlignment="center"

            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#16078e"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_image_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="93dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bs" />

        <RadioGroup
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:text="@string/bs"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Miley Cyrus"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Adele"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="@string/q4"
            android:textAlignment="center"


            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#16078e"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_image_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sg" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:hint="Type her Name"
            android:inputType="textMultiLine"
            android:textColor="#18369b"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="@string/q5"
            android:textAlignment="center"


            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#16078e"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo_image_view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vj2" />

        <RadioGroup
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:text="Katy Perry"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="@string/vj"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/q53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Lady Gaga"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#18369b"
                android:textStyle="bold" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#d24848"
            android:text="CHECK MY RESULT!"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="@string/yt"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#022a79"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#022a79"
            android:textSize="150sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="30dp"
            android:background="#d24848"
            android:text="@string/next1"
            android:textAlignment="center"
            android:textColor="#fbfbfd"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>